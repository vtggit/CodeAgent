# ======================
# GitHub Configuration
# ======================
GITHUB_TOKEN=ghp_your_github_personal_access_token_here
GITHUB_WEBHOOK_SECRET=your_webhook_secret_here

# ======================
# AI/LLM Configuration
# ======================
ANTHROPIC_API_KEY=sk-ant-your_anthropic_api_key_here
ANTHROPIC_MODEL=claude-sonnet-4-5-20250929

# Optional: OpenAI (if using GPT models)
# OPENAI_API_KEY=sk-your_openai_api_key_here

# Optional: Local LM Studio
# LM_STUDIO_BASE_URL=http://10.1.1.58:1234/v1

# ======================
# Database Configuration
# ======================
DATABASE_URL=sqlite:///./data/multi_agent.db

# ======================
# Redis Configuration
# ======================
REDIS_URL=redis://localhost:6379/0

# ======================
# Application Settings
# ======================
LOG_LEVEL=INFO
ENVIRONMENT=development

# Deliberation Settings
MAX_ROUNDS=10
CONVERGENCE_THRESHOLD=0.8
MIN_VALUE_THRESHOLD=0.2
TIMEOUT_MINUTES=60

# ======================
# Monitoring (Optional)
# ======================
# SENTRY_DSN=your_sentry_dsn_here
# PROMETHEUS_ENABLED=true
# PROMETHEUS_PORT=9090

# ======================
# Security
# ======================
# API_KEY_SECRET=your_api_key_for_manual_triggers

# ======================
# Feature Flags
# ======================
ENABLE_COST_TRACKING=false
ENABLE_CACHING=false
ENABLE_LABEL_FILTERING=false
